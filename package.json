{
  "private": true,
  "scripts": {
    "start": "start-storybook",
    "test": "jest --colors",
    "lint": "eslint \"src/**/*.{js,jsx,mjs,ts,tsx}\" && tslint \"src/**/*.{ts,tsx}\""
  },
  "jest": {
    "preset": "react-zeroconfig"
  },
  "husky": {
    "hooks": {
      "pre-commit": "markdown-source-import \"{,!(node_modules)/**/}*.md\" --git-add && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,mjs}": [
      "eslint",
      "jest --colors --findRelatedTests"
    ],
    "src/**/*.{ts,tsx}": [
      "eslint",
      "tslint",
      "jest --colors --findRelatedTests"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "eslintIgnore": [
    "src/**/public/*",
    "src/**/*.d.ts"
  ],
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "devDependencies": {
    "@storybook/addon-storysource": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "@types/eslint": "^6.1.1",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/storybook__react": "^4.0.2",
    "eslint": "^6.2.2",
    "eslint-config-react-app": "^5.0.1",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.3",
    "markdown-source-import": "^1.2.0",
    "react-zeroconfig": "^3.15.0",
    "tslint": "^5.19.0",
    "tslint-ssen-rules": "^1.3.0"
  }
}
